<main>
    <h2>Agendamiento de citas</h2>
    <div class="container-form">
        <form method="post" action="/agregar-cita">
            <label for="cedula">Número de cédula:</label>
            <input type="number" id="cedula" name="cedula" required>
            <label for="fecha_cita">Fecha de cita medica:</label>
            <input type="date" id="fecha_cita" name="fecha_cita" required>
            <label for="medico">Medico Especialista:</label>
            <select name="medico" id="medico">
                <option value="Seleccione una opción">Seleccione una opción</option>
                {{#each resultado}}
                <option value={{cedula}}>{{nombres}} {{apellidos}}</option>
                {{/each}}
            </select>
            <input type="submit" value="Enviar" id="enviar">
        </form>
        <a href="../index.html"><input type="button" value="Volver" id="volver"></a>
    </div>

</main>

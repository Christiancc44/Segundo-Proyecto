<main>
    <h2>Lista de citas</h2>
    <table>
        <thead>
            <tr>
                <th>Fecha de cita</th>
                <th>Paciente</th>
                <th>Telefono</th>
                <th>Especialidad</th>
                <th>Consultorio</th>
                <th>Medico</th>
            </tr>
        </thead>
        <tbody>
            <!-- Se agrega el contenido dinamicamente a traves de Handlebars-->
            {{#each resultado}}
            <tr>
                <td>{{formatoFecha fecha_cita}}</td>
                <td>{{nombres}} {{apellidos}}</td>
                <td>{{telefono}}</td>
                <td>{{especialidad}}</td>
                <td>{{consultorio}}</td>
                <td>{{nombreMedico}} {{apellidoMedico}}</td>
            </tr>
            {{/each}}
        </tbody>
    </table>
    <a href="./index.html"><input type="button" value="Volver"></a>
</main>
